pipeline {
    agent {
        label 'ubuntu'
    }
    
    stages {
        stage('checkout') {
            steps {
                cleanWs()
                checkout scmGit(branches: [[name: '*/dev']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/shlomoshalit123/react-java0mysql.git']])
            }
        }
        stage('build') {
            steps {
                sh 'docker compose up -d'
            }
        }
        stage('test') {
            steps {
                sh 'sleep 30'
                sh 'curl 127.0.0.1:3000'
                sh 'echo "APPLICATION IS RUNNING"'
            }
        }
            stage('package') {
                withCredentials([usernamePassword(credentialsId: 'nexus', passwordVariable: 'nexus_password', usernameVariable: 'nexus_user')]) {
                    steps {
                        sh 'echo ${nexus_user}'
                        sh 'echo docker tag images'
                        sh 'echo docker upload'
                        sh 'echo "APPLICATION IS RUNNING"'
                    }
                }
            }
    }
    post {
       always {
            sh 'echo ***** CLEANUP *****'    
            sh 'echo $(docker ps --filter "name=$JOB_NAME")'
            sh 'docker rm -f $(docker ps --filter "name=$JOB_NAME" -q)'
        }
    }
}
