pipeline {
    agent {
        label 'ubuntu'
    }
    
    stages {
        stage('checkout') {
            steps {
                cleanWs()
                checkout scmGit(branches: [[name: '*/dev']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/shlomoshalit123/react-java0mysql.git']])
            }
        }
        stage('build') {
            steps {
                sh 'docker compose up -d'
            }
        }
        stage('test') {
            steps {
                sh 'sleep 30'
                sh 'curl 127.0.0.1:3000'
            }
        }
    }
    post {
       always {
            sh 'echo ***** CLEANUP *****'    
            sh 'echo $(docker ps --filter "name=$JOB_NAME")'
            sh 'docker rm -f $(docker ps --filter "name=$JOB_NAME" -q)'
        }
    }
}