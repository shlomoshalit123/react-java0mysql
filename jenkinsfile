pipeline {
    agent {
        label 'ubuntu'
    }
    
    stages {
        stage('checkout') {
            steps {
                cleanWs()
                checkout scmGit(branches: [[name: '*/dev']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/shlomoshalit123/react-java0mysql.git']])
            }
        }
        stage('build') {
            steps {
                sh 'docker compose up -d'
            }
        }
        stage('test') {
            steps {
                sh 'docker ps'
                sh 'sleep 30'
                sh 'curl 127.0.0.1:3000'
                sh 'echo "APPLICATION IS RUNNING"'
            }
        }
            stage('publish') {
                steps {
                    withCredentials([usernamePassword(credentialsId: 'nexus', passwordVariable: 'nexus_password', usernameVariable: 'nexus_user')]) {
                    sh 'docker login -u ${nexus_user} -p ${nexus_password} http://10.0.0.107:8811'
                    sh 'docker push 10.0.0.107:8811/app_frontend:${BUILD_NUMBER}'
                    sh 'docker push 10.0.0.107:8811/app_backend:${BUILD_NUMBER}'
                    sh 'docker push 10.0.0.107:8811/app_db:${BUILD_NUMBER}'
                    sh 'docker rmi -f $(docker images --filter=reference="10.0.0.107:8811/*:${BUILD_NUMBER}" -q)'
                    }
                }
            }
    }
    post {
       always {
            sh 'echo ***** CLEANUP *****'    
            sh 'echo $(docker ps --filter "name=$JOB_NAME")'
            sh 'docker rm -f $(docker ps --filter "name=$JOB_NAME" -q)'
        }
    }
}
